@{
    ViewData["Title"] = "Anasayfa";
}

@section addCSS{
    <link href="~/css/style.css" rel="stylesheet" />
}
@model List<AppModel>

<body>
    <div class="container mt-5 col-lg-5 col-md-8 col-sm-8">
        <div class="row justify-content-center">
            @foreach (var app in Model)
            {
                <div class="col-lg-5 col-md-6 col-sm-12">
                    <div class="card mb-3 card-size" style="background-color: dimgrey">
                        <img src="@app.Img" class="card-img-top img-size" alt="@app.Title">
                        <div class="card-body text-center">
                            <h5 class="card-title">@app.Title</h5>
                            <a href="@app.Url" class="btn btn-success btn-block">Go To App</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>


<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"></script>









